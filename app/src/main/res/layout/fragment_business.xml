<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.BusinessFragment"
    android:id="@+id/fragment_business_layout"
    android:background="@color/white_001">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/search_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:background="@drawable/search_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingTop="2dp"
                android:paddingEnd="7dp"
                android:paddingBottom="2dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/search_icon"
                    app:tint="@color/blue_003" />

                <EditText
                    android:id="@+id/search_Inp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="#FFFFFF"
                    android:layout_weight="1"
                    android:hint="Search"
                    android:padding="2dp"
                    android:textColor="@color/blue_003"
                    android:textColorHint="@color/blue_003"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:maxLength="50"
                    android:layout_marginEnd="20dp"/>

                <ImageView
                    android:id="@+id/clear_search"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/round_close_24"
                    android:layout_marginEnd="15dp"
                    android:visibility="invisible"
                    app:tint="@color/blue_003" />

            </LinearLayout>

            <ImageView
                android:id="@+id/filter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:rotation="90"
                android:src="@drawable/filter_icon"
                app:tint="@color/blue_001" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_section" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fab_bg"
            android:visibility="gone">
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_dating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Dating"
            android:textColor="@color/blue_001"
            android:textSize="14sp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/fab_dating"
            app:layout_constraintBottom_toBottomOf="@id/fab_dating"
            app:layout_constraintEnd_toStartOf="@id/fab_dating"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_dating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/heart_outlined"
            app:backgroundTint="#FFC107"
            app:fabSize="mini"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@id/fab_matrimony"
            app:layout_constraintStart_toStartOf="@id/fab_matrimony"
            app:layout_constraintEnd_toEndOf="@id/fab_matrimony"/>

        <TextView
            android:id="@+id/tv_matrimony"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Matrimony"
            android:textColor="@color/blue_001"
            android:textSize="14sp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/fab_matrimony"
            app:layout_constraintBottom_toBottomOf="@id/fab_matrimony"
            app:layout_constraintEnd_toStartOf="@id/fab_matrimony"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_matrimony"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ring"
            app:backgroundTint="#FFC107"
            app:fabSize="mini"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@id/fab_buy_sell_rent"
            app:layout_constraintStart_toStartOf="@id/fab_buy_sell_rent"
            app:layout_constraintEnd_toEndOf="@id/fab_buy_sell_rent"/>

        <TextView
            android:id="@+id/tv_buy_sell_rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Buy-Sell-Rent"
            android:textColor="@color/blue_001"
            android:textSize="14sp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/fab_buy_sell_rent"
            app:layout_constraintBottom_toBottomOf="@id/fab_buy_sell_rent"
            app:layout_constraintEnd_toStartOf="@id/fab_buy_sell_rent"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_buy_sell_rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_shopping_bag_24"
            app:backgroundTint="#FFC107"
            app:fabSize="mini"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@id/fab_cards"
            app:layout_constraintStart_toStartOf="@id/fab_cards"
            app:layout_constraintEnd_toEndOf="@id/fab_cards"/>

        <TextView
            android:id="@+id/tv_cards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Business Cards"
            android:textColor="@color/blue_001"
            android:textSize="14sp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/fab_cards"
            app:layout_constraintBottom_toBottomOf="@id/fab_cards"
            app:layout_constraintEnd_toStartOf="@id/fab_cards"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_cards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/business_card"
            app:backgroundTint="#FFC107"
            app:fabSize="mini"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@id/fab_groups"
            app:layout_constraintStart_toStartOf="@id/fab_groups"
            app:layout_constraintEnd_toEndOf="@id/fab_groups"/>

        <TextView
            android:id="@+id/tv_groups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Groups"
            android:textColor="@color/blue_001"
            android:textSize="14sp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/fab_groups"
            app:layout_constraintBottom_toBottomOf="@id/fab_groups"
            app:layout_constraintEnd_toStartOf="@id/fab_groups"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_groups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/groups_active"
            app:backgroundTint="#FFC107"
            app:fabSize="mini"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@id/fab_jobs"
            app:layout_constraintStart_toStartOf="@id/fab_jobs"
            app:layout_constraintEnd_toEndOf="@id/fab_jobs"/>

        <TextView
            android:id="@+id/tv_jobs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Jobs"
            android:textColor="@color/blue_001"
            android:textSize="14sp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/fab_jobs"
            app:layout_constraintBottom_toBottomOf="@id/fab_jobs"
            app:layout_constraintEnd_toStartOf="@id/fab_jobs"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_jobs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_work_24"
            app:backgroundTint="#FFC107"
            app:fabSize="mini"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@id/fab_notes"
            app:layout_constraintStart_toStartOf="@id/fab_notes"
            app:layout_constraintEnd_toEndOf="@id/fab_notes"/>

        <TextView
            android:id="@+id/tv_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Notes"
            android:textColor="@color/blue_001"
            android:textSize="14sp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/fab_notes"
            app:layout_constraintBottom_toBottomOf="@id/fab_notes"
            app:layout_constraintEnd_toStartOf="@id/fab_notes"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_edit_note_24"
            app:backgroundTint="#FFC107"
            app:fabSize="mini"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@id/fab"
            app:layout_constraintStart_toStartOf="@id/fab"
            app:layout_constraintEnd_toEndOf="@id/fab"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            app:fabSize="normal"
            android:src="@drawable/round_add_24"
            android:contentDescription="@string/show_menu"
            app:tint="@color/white_001"
            app:backgroundTint="@color/blue_001"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>